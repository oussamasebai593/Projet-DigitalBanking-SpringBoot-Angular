pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven'
    }

    environment {
        SONAR_TOKEN = credentials('Digital Banking Frontend-token')
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Build Backend') {
            steps {
                dir('ebanking-backend') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Tests') {
            steps {
                dir('ebanking-backend') {
                    sh 'mvn test'
                }
            }
        }

stage('SonarQube Analysis') {
    steps {
        dir('ebanking-backend') {
            withSonarQubeEnv(credentialsId: 'Digital Banking Frontend', installationName: 'SonarQubeServer') {
                sh """
                mvn sonar:sonar \
                  -Dsonar.projectKey=DigitalBankingFrontend \
                  -Dsonar.projectName='Digital Banking Frontend' \
                  -Dsonar.projectVersion=1.0 \
                  -Dsonar.sources=src/main/java \
                  -Dsonar.tests=src/test/java \
                  -Dsonar.login=${SONAR_TOKEN}
                """
            }
        }
    }
}

        stage('Package') {
            steps {
                dir('ebanking-backend') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Backend build + SonarQube OK'
        }
        failure {
            echo '❌ Erreur dans le backend'
        }
    }
}
