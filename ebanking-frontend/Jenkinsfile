pipeline {
    agent any

    tools {
        nodejs 'NodeJS22' // Assure-toi que NodeJS22 est configur√© dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Debug Structure') {
            steps {
                sh 'echo "Contenu du workspace:"'
                sh 'ls -la'
                sh 'echo "Chercher package.json:"'
                sh 'find . -name package.json'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('ebanking-frontend') { // Mets exactement le nom du dossier frontend
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('ebanking-frontend') {
                    withSonarQubeEnv('SonarQubeServer') {
                        // Utilisation de SonarScanner CLI pour projet Angular
                        sh """
                        sonar-scanner \
                          -Dsonar.projectKey=ebanking-frontend \
                          -Dsonar.projectName=ebanking-frontend \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://192.168.8.17:9000 \
                          -Dsonar.login=sqp_d9a4a796b35ed19ac7d00191b0697eb6e06b8fe1
                        """
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }
    }

    post {
        always {
            echo 'üîπ Nettoyage Docker‚Ä¶'
            sh 'docker system prune -f || true'
        }
        success {
            echo '‚úÖ Frontend build et analyse SonarQube r√©ussis !'
        }
        failure {
            echo '‚ùå Erreur lors du build frontend ou analyse SonarQube'
        }
    }
}
