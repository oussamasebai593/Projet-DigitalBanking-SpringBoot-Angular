pipeline {
    agent any

    tools {
        nodejs 'NodeJS22'
    }
    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

stage('Install Dependencies') {
    steps {
        dir('ebanking-frontend') {
            sh 'npm install'
        }
    }
}

stage('Build Angular') {
    steps {
        sh 'npm run build'
    }
}

    post {
        always {
            sh 'docker system prune -f'
        }
        success {
            echo '✅ Frontend build et Docker déployé'
        }
        failure {
            echo '❌ Erreur lors du build frontend'
        }
    }
}
