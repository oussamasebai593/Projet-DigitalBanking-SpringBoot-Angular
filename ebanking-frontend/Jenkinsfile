pipeline {
    agent any

    tools {
        nodejs 'NodeJS22'
    }

    environment {
        SONAR_TOKEN_FRONTEND = credentials('sonar-scaner')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Debug Structure') {
            steps {
                sh 'ls -la'
                sh 'find . -name package.json'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('ebanking-frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Scan Frontend') {
            steps {
                dir('ebanking-frontend') {
                    withSonarQubeEnv('MySonarQubeServer') {
                        sh '''
                        sonar-scanner \
                            -Dsonar.projectKey=frontend_project \
                            -Dsonar.sources=src \
                            -Dsonar.host.url=http://192.168.8.17:9000 \
                            -Dsonar.login=$SONAR_TOKEN_FRONTEND \
                            -Dsonar.exclusions=node_modules/** \
                            -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -f'
        }
        success {
            echo '✅ Frontend build et SonarQube scan terminé'
        }
        failure {
            echo '❌ Erreur lors du build ou SonarQube scan'
        }
    }
}
