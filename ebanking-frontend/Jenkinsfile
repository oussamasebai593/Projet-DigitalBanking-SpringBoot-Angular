pipeline {
    agent any

    tools {
        nodejs 'NodeJS22'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Debug Structure') {
            steps {
                sh 'ls -la'
                sh 'find . -name package.json'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('ebanking-frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

         stage('Backend - SonarQube Analysis') {
              steps {
                  dir('ebanking-backend') {
                     withSonarQubeEnv('SonarQubeServer')  {
                sh 'mvn sonar:sonar -Dsonar.java.binaries=target/classes'
                      }
                  }
              }
          }
              stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -f'
        }
        success {
            echo '✅ Frontend build et Docker déployé'
        }
        failure {
            echo '❌ Erreur lors du build frontend'
        }
    }
}
