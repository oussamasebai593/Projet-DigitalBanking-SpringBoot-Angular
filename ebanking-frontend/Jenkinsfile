pipeline {
    agent any

    tools {
        nodejs 'NodeJS22' // لازم يكون متثبّت في Jenkins Manage Tools
    }

    environment {
        IMAGE_NAME = "ebanking-frontend"
        DOCKERHUB_REPO = "hamzaatlili/front"
        VERSION = "${BUILD_NUMBER}" // كل build ياخو tag مختلف
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Install dependencies') {
            steps {
                dir('ebanking-frontend') {
                    sh "npm install"
                }
            }
        }

        stage('Build Angular') {
            steps {
                dir('ebanking-frontend') {
                    sh "npm run build"
                }
            }
        }

    }
    post {
        success {
            echo '✅ Pipeline terminé avec succès'
        }
        failure {
            echo '❌ Erreur dans le pipeline'
        }
    }
    }
