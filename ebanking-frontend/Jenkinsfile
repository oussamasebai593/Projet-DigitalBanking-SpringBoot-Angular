pipeline {
    agent any

    tools {
        nodejs 'NodeJS22'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/oussamasebai593/Projet-DigitalBanking-SpringBoot-Angular.git'
            }
        }

        stage('Debug Structure') {
            steps {
                sh 'ls -la'
                sh 'find . -name package.json'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('ebanking-frontend') {
                    sh 'rm -rf node_modules package-lock.json'
                    sh 'npm install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('ebanking-frontend') {
                    withSonarQubeEnv('SonarQubeServer') {
                    mvn clean verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar \
                      -Dsonar.projectKey=ebanking-frontend \
                      -Dsonar.projectName='ebanking-frontend' \
                      -Dsonar.host.url=http://192.168.8.17:9000 \
                      -Dsonar.token=sqp_d9a4a796b35ed19ac7d00191b0697eb6e06b8fe1
                    }
                }
            }
        }
              stage('Quality Gate') {
            steps {
                timeout(time: 3, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: false
                }
            }
        }
    }

    post {
        always {
            sh 'docker system prune -f'
        }
        success {
            echo '✅ Frontend build et Docker déployé'
        }
        failure {
            echo '❌ Erreur lors du build frontend'
        }
    }
}
